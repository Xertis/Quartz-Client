<container size="1000,580" color='#0F1E2DB2' interval="1" context="menu">
    <label gravity="top-left" margin="30,0,0,0">@Server_list</label>
    <panel id='server_list' pos='15,15' size='440,490' color='0' max-length='455' scrollable='true'>
        <!-- content is generated in script -->
    </panel>

    <label gravity="top-right" margin="0,0,30,0">@Server_info</label>
    <panel id='server_info' gravity="top-right" margin="0,15,0,0" size='480,506' color='0' max-length='506' scrollable='true'>
        <label>@quartz.engine_version</label>
        <label id='version' multiline="true" color='#8C8C8C'>None</label>

        <label margin="0,20,0,0">@quartz.neutron_version</label>
        <label id='neutron_version' multiline="true" color='#8C8C8C'>None</label>

        <label margin="0,20,0,0">@Friends_online</label>
        <label id='friends' markup="md" multiline="true" color='#8C8C8C'>None</label>

        <label margin="0,100,0,0">@Description</label>
        <label id='description' markup="md" multiline="true" text-wrap="true" size="300" color='#8C8C8C'>None</label>
    </panel>

    <image size="5,580" src='gui/line' gravity="center-center"/>

    <button pos='83,525' size='392,40' onclick='main_menu()'>@Back</button>
    <button gravity="bottom-right" margin="0,0,15,15" size='460,40' onclick='menu.page="quartz_content"'>@Content</button>
    <image id="config" onclick='to_config()' interactive='true' src='gui/settings_icon' 
        size='36'
        color='#FFFFFF50' hover-color='#FFFFFF10'
        pos='8,527'/>
    <image id="refresh" onclick='refresh()' interactive='true' src='gui/refresh' 
        size='36'
        color='#FFFFFF50' hover-color='#FFFFFF10'
        pos='44,527'/>

</container>

